#app-container
  .row
    .text-center.col-xs-12.col-md-6.col-md-offset-3
      %h1.h2 Your weight for today:

      - if @todays_weight.nil?
        = form_for @weight_entry do |f|
          .text-center.col-xs-12.col-md-6.col-md-offset-3
            %p
              = f.text_field :value, class: 'form-control'
          .text-center.col-xs-12.col-md-6.col-md-offset-3
            %p
              = f.submit "Save", class: 'btn btn-primary'
      - else
        .text-center.col-xs-12.col-md-6.col-md-offset-3
          %h2.h3
            #{@todays_weight}
            %a{href: "#"}
              %span.glyphicon.glyphicon-pencil

      %p.text-center.col-xs-12.col-md-6.col-md-offset-3
        #{link_to 'See old entries', weight_entries_path}
